@{
    ViewBag.Title = "Study Information Editor";
    Layout = "~/Views/Shared/_Layout.cshtml";
    System.Data.DataSet ds = SurveyApp.DataHelper.SurveyGetAll();
}

<h2><a href="javascript:void(0);" id="back" onclick="history.go(-1);"></a> &nbsp;Study Information Editor</h2>

<style>
    ._panel { background: #fafafa; border: solid 1px #cccccc; padding: 10px; border-radius: 6px; }
</style>
<br />
<form class="form-horizontal" role="form">


    <div class="form-group">
        <label class="control-label col-sm-2">Study:</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="parent" placeholder="Study Name">
        </div>        
        <label class="control-label col-sm-1">Status:</label>
        <div class="col-sm-2">
            <select class="form-control"><option>Active</option><option>Inactive</option><option>Completed</option></select>
        </div>
        <div class="col-sm-2">@Html.ActionLink("Add Schedule Template", "Index", "Schedule", new object { }, new { @class = "btn btn-link" }) </div>
    </div>
    
    <div class="col-sm-offset-2 col-sm-10">
    <table class="table table-striped table-hover">
    <thead>
      <tr class="small">
        <th>Survey</th>
        <th>Schedule For Parent</th>
        <th>Schedule For Teacher</th>

      </tr>
    </thead>
    <tbody>@foreach (System.Data.DataRow dr in ds.Tables[0].Rows)
                {
      <tr>
        <td><label class="col-sm-12"> <input type="checkbox" name="Teacher" />&nbsp;
                                        @dr["Title"].ToString()
                                    </label></td>
        <td><select class="form-control">
                                            <option>Choose Template</option>
                                            <option>Test Schedule 1</option>
                                            <option>Test Schedule 2</option>
                                            <option>Test Schedule 3</option>
                                        </select></td>
        <td> <select class="form-control"> 
                                            <option>Choose Template</option>
                                            <option>Test Schedule 1</option>
                                            <option>Test Schedule 2</option>
                                            <option>Test Schedule 3</option>
                                        </select></td>
      </tr>
    }
     </table>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-4">
            <button type="submit" class="btn btn-default">Save Information</button>
        </div>
    </div>
</form>